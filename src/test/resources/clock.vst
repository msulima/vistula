'''# javascript
let start = vistula.constantObservable(new Date().getTime());
'''

ticks = (0 or ticks + 1 for ticks in clock)

def oddTime(clock):
  if clock % 2 == 0:
    clock
  else:
    "no"

def realTimeElapsed(elapsed):
  clock - elapsed

timeElapsed = clock - start

labelText = "It is: " + clock + ", elapsed from entering page: " + timeElapsed + " in " + ticks + " real: " + realTimeElapsed(start) + " is odd: " + oddTime(clock)

areaField = cursor.x * cursor.y

main = '''# html
<div>
<p>{{ labelText }}</p>
<p>
{% if areaField < 160000 %}
  Sorry, area is <strong>too small</strong>.
{% else %}
  Area is {{ cursor.x }} * {{ cursor.y }} = {{ areaField }} px^2
{% endif %}
</p>
</div>
'''

appendChild("main", main)
